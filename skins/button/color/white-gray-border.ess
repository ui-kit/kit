background = __.color.white
border-color = __.color.white
box-shadow = '0 0 0 1px ' + __.color.black.clone().clearer(.9)
color = __.color.primary

&:hover
  background = __.color.primary
  border-color = __.color.primary
  box-shadow none
  color = __.color.white

&:active
  background = __.color.primary.darker
  border-color = __.color.primary.darker
  color = __.color.white