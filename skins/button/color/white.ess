background-color = __.color.white
border-color = __.color.white
color = __.color.white
  
&:hover
  background-color = __.color.white
  border-color = __.color.white
  color = __.color.primary
  opacity .8

&:active
  background-color = __.color.white
  border-color = __.color.white
  color = __.color.primary
  opacity .5
  
&[disabled],
&:disabled
  opacity .1
  color = __.color.primary