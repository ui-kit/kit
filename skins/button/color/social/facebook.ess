background-color = __.color.facebook
border-color = __.color.facebook
color = __.color.facebook
&:hover
  color = __.white
  background-color = __.color.facebook.dark
  border-color = __.color.facebook.dark
&:active,
&.is-active,
.is-active .dropdown-trigger&
  background-color = __.color.facebook.darker
  border-color = __.color.facebook.darker
&:focus
  outline-color = __.color.facebook.clone().clearer(0.4)
  outline-width 2px
  outline-style solid
  outline-offset 1px