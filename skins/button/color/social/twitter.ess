background-color = __.color.twitter
border-color = __.color.twitter
color = __.color.twitter
&:hover
  color = __.white
  background-color = __.color.twitter.dark
  border-color = __.color.twitter.dark
&:active,
&.is-active,
.is-active .dropdown-trigger&
  background-color = __.color.twitter.darker
  border-color = __.color.twitter.darker
&:focus
  outline-color = __.color.twitter.clone().clearer(0.4)
  outline-width 2px
  outline-style solid
  outline-offset 1px