background-color = __.color.gplus
border-color = __.color.gplus
color = __.color.gplus
&:hover
  color = __.white
  background-color = __.color.gplus.dark
  border-color = __.color.gplus.dark
&:active,
&.is-active,
.is-active .dropdown-trigger&
  background-color = __.color.gplus.darker
  border-color = __.color.gplus.darker
&:focus
  outline-color = __.color.gplus.clone().clearer(0.4)
  outline-width 2px
  outline-style solid
  outline-offset 1px