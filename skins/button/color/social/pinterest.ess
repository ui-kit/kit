background-color = __.color.pinterest
border-color = __.color.pinterest
color = __.color.pinterest
&:hover
  color = __.white
  background-color = __.color.pinterest.dark
  border-color = __.color.pinterest.dark
&:active,
&.is-active,
.is-active .dropdown-trigger&
  background-color = __.color.pinterest.darker
  border-color = __.color.pinterest.darker
&:focus
  outline none
  box-shadow = '0 0 2px 2pt ' + __.color.pinterest.clone().clearer(0.4)