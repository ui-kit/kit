background-color = __.color.linkedin
border-color = __.color.linkedin
color = __.color.linkedin
&:hover
  color = __.white
  background-color = __.color.linkedin.dark
  border-color = __.color.linkedin.dark
&:active,
&.is-active,
.is-active .dropdown-trigger&
  background-color = __.color.linkedin.darker
  border-color = __.color.linkedin.darker
&:focus
  outline-color = __.color.linkedin.clone().clearer(0.4)
  outline-width 2px
  outline-style solid
  outline-offset 1px