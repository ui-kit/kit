background-color = __.color.cyan
border-color = __.color.cyan
color = __.color.cyan
&:hover
  color = __.white
  background-color = __.color.cyan.dark
  border-color = __.color.cyan.dark
&:active,
&.is-active,
.is-active .dropdown-trigger&
  background-color = __.color.cyan.darker
  border-color = __.color.cyan.darker
&:focus
  outline none
  box-shadow = '0 0 2px 2pt ' + __.color.cyan.clone().clearer(0.4)