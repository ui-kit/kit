&-image
  display block
  position relative
  width 600px
  img
    border-radius 2px
    display block
    width 100%
  &-caption
    background linear-gradient(rgba(36, 36, 38, 0), rgba(36, 36, 38, .9))
    border-bottom-left-radius 2px
    border-bottom-right-radius 2px
    bottom 0
    box-sizing border-box
    color = __.color.white
    font-size = __.h10
    font-weight regular
    padding 22px 8px 8px 8px
    position absolute
    right 0
    text-align right
    width 100%