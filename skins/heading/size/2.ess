font-size = __.h2
letter-spacing -.02em
text-rendering optimizeLegibility 
font-weight 300

@media screen and (max-width: 1024px)
  font-size = __.h2
  letter-spacing 0
 
@media screen and (max-width: 640px)
  font-size 24px
  letter-spacing: 0
  font-weight: 300
 
@media screen and (max-width: 500px)
  font-size 28px
  letter-spacing: 0
  font-weight: 400
