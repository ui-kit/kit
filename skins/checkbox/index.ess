%./size/medium.ess

-webkit-appearance none
border-radius 2px
border 2px solid
border-color inherit
box-sizing border-box
color = __.color.white
outline none
position relative
user-select none
vertical-align middle

&:hover
  filter brightness(65%)

&:focus
  &:after
    border 2px solid
    border-color inherit
    border-radius 6px
    bottom -6px
    display block
    content ''
    left -6px
    position absolute
    right -6px
    top -6px
    opacity .5

&:active, &:checked, &.is-active
  background = __.color.accent
  border-color = __.color.accent
  filter none
  &:before
    content 'âœ“'
    font-family 'SSGeomiconsSquared'
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    margin-top 2px