&:before, 
&:after 
  left 130%
  top 50%
  bottom auto
  right auto
  transform translateY(-50%)
  
&:before
  transform translate3d(-12px, -6px, 0)
  border-left-color = 'transparent !important'
  border-top-color = 'transparent !important'
  border-bottom-color = 'transparent !important'
  
&:hover:after, 
&:hover:before, 
&:focus:after, 
&:focus:before 
  left 110%
  bottom auto
