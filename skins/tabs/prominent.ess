%./index.ess
&-item
  border-style solid
  border-width 2px
  flex 1 1 100em
  margin 0 0 0 -2px
  opacity 1
  background transparent
  border-color inherit
  &:first-of-type
    border-radius 2px 0 0 2px
  &:last-of-type
    border-radius 0 2px 2px 0
  &:hover
    background-color rgba(255, 255, 255, 0.1)
  &:active
    background-color = __.color.primary
    color white
  &-is-selected
    background-color = __.color.primary
    color white
  &:active, &.is-selected
    border-color inherit