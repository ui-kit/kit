&:active,
&.is-active
  background = __.color.azure  
  box-shadow none
  color = __.color.primary
  cursor default
  z-index 2
  
&.is-active &-label
  &:after
    opacity 0

&:active &-input,
&.is-active &-input
  color #fff
  &::placeholder
    color rgba(255,255,255,.3)
    
&:active > &-content &-action,
&.is-active > &-content &-action
  color inherit
  
&.is-disabled:hover &-label,
&[disabled]:hover &-label,
&:disabled:hover &-label
  &:after
    border-color = __.color.azure
  
&.is-not-link
  &:hover,
  &:active
    background = __.color.white
    color hsl(210, 11%, 47%)