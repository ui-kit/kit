&:last-of-type 
  & <-input
    box-shadow none
    &:hover
      box-shadow = 'inset 0 -1px 0 ' +__.color.primary
    &:active,
    &:focus
      box-shadow = 'inset 0 -2px 0 ' +__.color.primary

  & <-label
    &:after
      opacity 0
      border-color transparent
  &:hover <-label
      &:after
        opacity 1
        border-color = __.color.primary
  <-input:focus + <-label
    &:after
      opacity 1
      border-color = __.color.primary