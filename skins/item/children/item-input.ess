color = __.color.gray
flex 1000
font-size 1em
line-height 1.45em
padding 8px 0
padding-left 12px
text-align right
width 100%
&::placeholder
  color = __.color.gray.clearer(.5)
// Styles underline on focus
&:focus
  +
    &-label
      color = __.color.primary
      &:after
        background = __.color.primary
        height 2px