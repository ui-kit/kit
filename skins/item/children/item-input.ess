align-self stretch
box-shadow = 'inset 0 -1px 0 ' +__.color.azure
color = __.color.gray
flex-grow 1
font-size 1em
line-height 1.45em
min-width 50%
padding 8px 0
padding-left 12px
text-align right
&::placeholder
  color = __.color.gray.clone().clearer(.5)

&:hover  
  box-shadow = 'inset 0 -1px 0 ' +__.color.primary

&:focus,
&:active
  box-shadow = 'inset 0 -2px 0 ' +__.color.primary
  &::placeholder
    color = __.color.gray.clone().clearer(.7)