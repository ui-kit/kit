line-height 1.45em
padding 8px 0
font-size 1em
flex 1000
text-align right
width 100%
padding-left 12px
color = __.color.gray
&::placeholder
  color = __.color.gray.clearer(.5)
// Styles underline on focus
&:focus
  +
    .item-label,
    &-item-label
      color = __.color.primary
      &:after
        background = __.color.primary
        height 2px