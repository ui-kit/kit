border-color = __.color.white
background-color = __.color.white

&:before
  background = __.color.gray

&:hover
  background = __.color.white.clone().dark
  border-color = __.color.white.clone().dark
  
&:active, &:checked, &.is-active
  background = __.color.green
  border-color = __.color.green

  &:before
    background = __.color.white