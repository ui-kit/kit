%./size/medium.ess
%./color/gray.ess 

-webkit-appearance none
border 2px solid
border-radius 100px
box-sizing border-box
outline none
position relative
vertical-align middle
&:before
  background = __.color.white
  border-radius 100px
  box-shadow = '0 2px 4px ' + __.color.black.clone().clearer(.9)
  content ''
  display block
  width 12px
  height 12px
 
&:active, &:checked, &.is-active
  background = __.color.accent
  border-color = __.color.accent
  &:before
    float right