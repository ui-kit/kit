%./size/medium.ess
%./color/gray.ess

-webkit-appearance none
border-radius 100px
box-sizing border-box
outline none
position relative
user-select none
vertical-align middle
margin 0

&:before
  background = __.color.white
  border-radius 100px
  box-shadow = '0 2px 4px ' + __.color.black.clone().clearer(.9)
  content ''
  display block
  padding-bottom 50%
  transition all .1s ease
  width 50%
  margin 8.33333%