// Modifies to:
// height 24px
// font-size h9
font-size = __.h9

&-input,
.Input-input
  padding 3px 0 3px 0
  &:focus ~ <-hint
    margin-top 5px

&-icon
  width 2rem
  
&-hint
  bottom auto
  margin-top -8px
  top 100%

&.has-label
  font-size = __.h10
  & </-input,
  .Input-input
    padding 9px 0 0
    &:valid ~ </-label,
    &:focus ~ </-label
      top 0px