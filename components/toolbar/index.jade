:doc
  @name Toolbar
  @props {Object} account
  @props {String} accountImg
  @props {String} center
  @props {String} links
  @props {Boolean} left
  @props {Boolean} links
  @props {Boolean} icon
  @props {Boolean} right

import './index.ess'
import ToolbarAccount from './account.jade'

var classFn = this.composeClasses('Toolbar', {'links': props.center})

div(className=classFn())
  div(className=classFn('&-inner'))
    if props.icon
      div(className=classFn('&-inner-icon'))
        yield icon

    if props.left
      div(className=classFn('&-inner-left'))
        yield left

    if props.center
      div(className=classFn('&-inner-center'))
        yield center

    if props.right
      div(className=classFn('&-inner-right'))
        yield right

    var account = props.account || _.account
    if props.accountImg
      // TODO get links somehow
      ToolbarAccount(image=account.image)
    // TODO else block

:module
  export var mixins = [require('ui-kit/mixins/compose-classes')]

  export var mergeProps = true